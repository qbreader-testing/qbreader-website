{
    "[html]": {
        "editor.rulers": [
            135
        ]
    },
    "[javascript]": {
        "editor.detectIndentation": false,
        "editor.indentSize": 2,
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.formatOnSave": false
    },
    "eslint.validate": [
        "javascript"
    ],
    "html.format.wrapLineLength": 135,
    // based on https://codeguide.co/#attribute-order
    "attrsSorter.order": [
        "class",
        "id",
        "name",
        "data-.+",
        "src",
        "for",
        "type",
        "href",
        "value",
        "title",
        "alt",
        "role",
        "aria-.+",
        "tabindex",
        "style"
    ]
}
